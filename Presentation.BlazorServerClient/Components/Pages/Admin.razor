@page "/admin"

<div class="flex flex-col h-screen">
    <!-- HEADER a todo lo ancho -->
    <header class="flex items-center justify-between bg-gray-800 text-white p-2 md:p-4">
        <div class="text-sm md:text-lg font-bold">
            Metis T1
        </div>
        <div class="flex items-center space-x-2 md:space-x-4">
            <span class="text-xs md:text-sm">Usuario</span>
            <button class="bg-gray-700 hover:bg-gray-600 px-2 py-1 md:px-3 md:py-1 rounded text-xs md:text-sm">
                Salir
            </button>
        </div>
    </header>

    <!-- CONTENEDOR PRINCIPAL: 
         - En pantallas pequeñas (mobile): 
           se apilan (flex-col).
         - En pantallas medianas o grandes: 
           se muestran en fila (flex-row).
    -->
    <div class="flex flex-col md:flex-row flex-grow">
        <!-- PRIMERA COLUMNA: Menú lateral con iconos 
             - w-full en mobile, w-20 en md+ 
             - flex-row en mobile, flex-col en md+ 
        -->
        <aside class="bg-gray-100 w-full md:w-20 border-b md:border-b-0 md:border-r
                       flex flex-row md:flex-col items-center justify-around
                       py-2 md:py-4
                       space-x-6 md:space-x-0 md:space-y-6">
            <!-- Ejemplo de ítem de menú -->
            <div class="group flex flex-col items-center cursor-pointer">
                <!-- Icono -->
                <svg class="w-6 h-6 text-gray-500 group-hover:text-gray-700" fill="none" stroke="currentColor"
                    stroke-width="2" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round"
                        d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8m-9 5v9" />
                </svg>
                <!-- Texto debajo del icono -->
                <span class="text-xs mt-1 text-gray-500 group-hover:text-gray-700 hidden md:block">
                    Chat
                </span>
            </div>

            <div class="group flex flex-col items-center cursor-pointer">
                <svg class="w-6 h-6 text-gray-500 group-hover:text-gray-700" fill="none" stroke="currentColor"
                    stroke-width="2" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M5 3v4h14V3m-2 18h-2a4 4 0 01-8 0H5" />
                </svg>
                <span class="text-xs mt-1 text-gray-500 group-hover:text-gray-700 hidden md:block">
                    Equipos
                </span>
            </div>
            <!-- Más iconos de menú... -->
        </aside>

        <!-- SEGUNDA COLUMNA: Lista de items 
             - w-full en mobile, w-64 en md+ 
        -->
        <section class="bg-white w-full md:w-64 border-b md:border-b-0 md:border-r 
                       p-2 md:p-4 flex flex-col">
            <!-- Encabezado: título y/o filtro -->
            <div class="flex items-center justify-between mb-2 md:mb-4">
                <h2 class="text-base md:text-lg font-semibold">Chats</h2>
                <button class="text-xs md:text-sm text-gray-600 hover:text-gray-800">
                    Filtrar
                </button>
            </div>

            <!-- Lista de items -->
            <ul class="space-y-2 overflow-y-auto flex-grow">
                <li class="p-2 rounded hover:bg-gray-100 cursor-pointer flex justify-between text-sm">
                    <span>Metis T1</span>
                    <span class="text-gray-500">Hoy</span>
                </li>
                <li class="p-2 rounded hover:bg-gray-100 cursor-pointer flex justify-between text-sm">
                    <span>Equipo Grupo A</span>
                    <span class="text-gray-500">Ayer</span>
                </li>
                <li class="p-2 rounded hover:bg-gray-100 cursor-pointer flex justify-between text-sm">
                    <span>Chat Personal</span>
                    <span class="text-gray-500">Mar 20</span>
                </li>
                <!-- Más elementos -->
            </ul>
        </section>

        <!-- TERCERA COLUMNA: Detalle del ítem seleccionado -->
        <main class="flex-1 flex flex-col">
            <!-- Sub-header en el detalle -->
            <header class="flex items-center justify-between bg-gray-100 border-b 
                           p-2 md:p-4">
                <h3 class="text-sm md:text-base font-semibold">Metis T1</h3>
                <div class="space-x-1 md:space-x-2">
                    <button class="bg-blue-500 hover:bg-blue-600 text-white px-2 py-1 md:px-3 md:py-1 
                                   rounded text-xs md:text-sm">
                        Operación 1
                    </button>
                    <button class="bg-gray-200 hover:bg-gray-300 text-gray-700 px-2 py-1 md:px-3 md:py-1 
                                   rounded text-xs md:text-sm">
                        Operación 2
                    </button>
                </div>
            </header>

            <!-- Contenido del detalle -->
            <div class="flex-1 p-2 md:p-4 overflow-y-auto">
                <div class="mb-4">
                    <p class="font-semibold text-sm md:text-base">Álvaro Vilargo (Ayer 14:54):</p>
                    <p class="text-xs md:text-sm">Esperemos no tarde 🕓</p>
                </div>
                <div class="mb-4">
                    <p class="font-semibold text-sm md:text-base">Jose Christian Sánchez (Hoy 09:22):</p>
                    <p class="text-xs md:text-sm">
                        Tengo una cita mañana a las 5 en la ciudad y la entrega de la otra a las 2 en Coacalco,
                        habrá problema si pasamos esa reunión al lunes?
                    </p>
                </div>
                <!-- Más contenido... -->
            </div>
        </main>
    </div>
</div>
