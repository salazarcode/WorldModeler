    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (https)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/Presentation.BlazorServerClient/bin/Debug/net9.0/Presentation.BlazorServerClient.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bhttps://\\S+"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        }
    ]
}